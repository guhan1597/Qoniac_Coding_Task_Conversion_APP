<!-- CurrencyConverterDesktop\MainWindow.xaml -->
<Window x:Class="CurrencyConverterDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Currency Converter" Height="350" Width="500">
    <Grid>
        <Label Content="Enter Amount (dollars,cents):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="AmountTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,5,0,0" Width="150"/>
        <Button Content="Convert" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="360,5,0,0" Click="ConvertButton_Click"/>
        <TextBlock x:Name="ResultTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" TextWrapping="Wrap"/>
    </Grid>
</Window>
